    height: 100%;
    box-sizing: border-box;
}
.weui-navbar {
	background: white;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    position: absolute;
    z-index: 500;
    top: 0;
    width: 100%;
    border-bottom: 1rpx solid #ccc
}

.weui-navbar__item {
    position: relative;
    display: block;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    padding: 26rpx 0;
    text-align: center;
    font-size: 0
}

.weui-navbar__item.weui-bar__item_on {
    color: #1aad19
}

.weui-navbar__slider {
    position: absolute;
    content: " ";
    left: 0;
    bottom: 0;
